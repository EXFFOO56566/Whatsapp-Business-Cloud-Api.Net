@model SendTextMessageViewModel
@{
	ViewData["Title"] = "Send WhatsApp Text Message Page";
}
<a asp-area="" asp-controller="Home" asp-action="Dashboard" class="btn btn-sm btn-outline-info" style="margin-top: 3% !important;"><</a>
@if (TempData["Success"] != null)
{
	<p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
<div class="row text-msg">


	<div class="col-md-6">
		<form asp-action="SendText">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row mb-3">
			<label class="col-sm-5 col-form-label">Recipient Phone Number</label>
			 <div class="col-sm-6">
                <input asp-for="RecipientPhoneNumber" class="form-control" />
            </div>
			
			
		</div>
        <div class="row mb-3">
            <label class="col-sm-5 col-form-label">Message</label>
            <div class="col-sm-6">
                <input asp-for="Message" class="form-control" />
            </div>
			
			
		</div>
		<div class="form-group">
			<input type="submit" value="Send Message" class="btn btn-success" />
		</div>
	</form>
	</div>
	<div class="col-md-2"></div>
	<div class="col-md-4 right-title">
		<div>
			<p style="font-size: 32px;">Send</p><br />
			<p style="font-size: 32px;color: #06f118;">Text</p><br />
			<p style="font-size: 32px;">Message</p><br />
		</div></a>

	</div>

   
</div>
